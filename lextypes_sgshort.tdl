  [ SYNSEM [ LOCAL [ CAT [ HEAD det & [ MINORS [ MIN #named_np_rel,
                                       ALTMIN poss_rel ] ],
                           VAL [ SPR < [ --MIN abstract_q_rel,
                                         NONLOC.QUE #que ] >,
                                 COMPS < >,
                                 SPEC < synsem & [ OPT +,
                                 	   --MIN one_nom_rel ] > ] ],
                     CONT [ HOOK [ LTOP #ltop,
                                   INDEX #index & nonconj_ref-ind ],
                            RELS <! relation !>,
                            HCONS <! !>,
			    ICONS <! !> ],
	             CONJ cnil,
                     AGR #index ],
             NONLOC.QUE #que,
             LKEYS [ KEYREL named_nom_relation &
                            [ PRED poss_rel,
                              LBL #ltop ],
                     ALTKEYREL.PRED implicit_q_rel ] ] ].               
                     
; 23-4-2021 - for 'go'. Without prep_rel as --MIN
; and without [ ARG1 non_expl-ind ] in KEYREL
basic_go_intrans_lt := arg1_subj_lt &
  [ LOCAL [ CAT.VAL.COMPS 
			< [ LOCAL [ CONT [ HOOK [ INDEX [ 
                                                          --TPC #tpc ],
                                                  XARG #index ] ] ] ],
			  ... >,
            CONT [ HOOK.INDEX #index & [ --TPC #tpc ],
